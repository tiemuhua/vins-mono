+++ b/build.py
@@ -0,0 +1,14 @@
+# NOTICE: in macos, file name and folder name is Case insensitive !!!
+# in commit b6928ae5c92e21a04bbe17a558e6e066dbe632f6, there has been a file called INSTALL, 
+# so it is illegal to make a new folder called install
+# b6928ae5c9这个提交里已经有INSTALL这个文件了，为了将头文件/库文件安装至install，我们这里将INSTALL改名为INSTALL.txt
+
+import os
+import subprocess
+import platform
+
+def call_shell(cmd:str)->int:
+    return subprocess.run(cmd.split(" "))
+
+call_shell("./bootstrap.sh --with-python-version=3.10 --prefix=install_" + platform.platform())
+call_shell("./b2 install --build-dir=build")
